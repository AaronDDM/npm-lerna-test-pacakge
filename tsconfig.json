{
    "compilerOptions": {
        "moduleResolution": "node",
        "lib": [
            "esnext",
            "dom",
            "dom.Iterable"
        ],
        "target": "esnext",
        "importsNotUsedAsValues": "error",
        "sourceMap": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "allowJs": false,
        "checkJs": false,
        "noEmit": true,
        "types": [
            "svelte",
            "jest",
            "dom",
            "cypress"
        ],
        "baseUrl": ".",
        "rootDirs": [
            "packages", "commons"
        ],
        "paths": {
            "@commons/*": [
                "./commons/src/*"
            ]
        },
        "strict": true,
        "skipLibCheck": true,
        "resolveJsonModule": true
    },
    "include": [
        "commons/**/*",
        "packages/**/*"
    ],
    "exclude": [
        "node_modules/**/*",
        "**/node_modules/**/*",
    ]
}